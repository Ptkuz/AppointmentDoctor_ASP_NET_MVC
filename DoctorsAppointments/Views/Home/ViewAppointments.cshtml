@using DoctorsAppointments.Models
@model IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Просмотр записей";
}

<h2>Список всех записей к врачам</h2>
<p><a asp-action="CreateAppointment" asp-controller="Data">Добавить запись к врачу</a></p>
<table class="table">
    <tr><th>Имя пациента</th><th>Отчество пациента</th><th>Фамилия пациента</th><th>Полис</th><th>Имя доктора</th><th>Отчество доктора</th><th>Фамилия доктора</th><th>Профиль</th><th>Дата записи</th><th>Время записи</th><th></th></tr>
    @foreach(var item in Model.Appointments)
    {
        <tr>
            <td>@item.Patient.FirstName</td>
            <td>@item.Patient.Patronymic</td>
            <td>@item.Patient.LastName</td>
            <td>@item.Patient.Polis</td>
            <td>@item.Doctor.FirstName</td>
            <td>@item.Doctor.Patronymic</td>
            <td>@item.Doctor.LastName</td>
            <td>@item.Doctor.Profile.Name</td>
            <td>@item.DateAppointment.ToShortDateString()</td>
            <td>@item.TimeAppointment</td>
            <td>
                 <form asp-controller="Data" asp-action="DeleteAppointment" method="post"  asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>

<p>
    @if (Model.PageViewModel.HasPreviousPage)
    {
        <a asp-action="ViewAppointments" asp-route-page="@(Model.PageViewModel.PageNumber - 1)" class="glyphicon glyphicon-chevron-left">
            Назад
        </a>        
    }
    @if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="ViewAppointments"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)" class="glyphicon glyphicon-chevron-right">
        Вперед
    </a>
}
</p>
