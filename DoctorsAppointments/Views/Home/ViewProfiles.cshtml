@using DoctorsAppointments.Models.ViewModels
@model IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, DoctorsAppointments

@{
    ViewBag.Title = "Просмотр профилей";
}


<h2>Список профилей</h2>

<p><a asp-action="CreateProfile" asp-controller="Data">Добавить Профиль</a></p>
<table class="table">
    <tr><th>
        <a asp-action="ViewProfiles" asp-route-sortOrder="@(Model.SortProfilesViewModel.NameSort)">
        Название
        </a>
        </th><th>Описание<th></th><th></th></tr>
    @foreach(var item in Model.Profiles)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a asp-action="EditProfile" asp-controller="Data" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                 <form asp-controller="Data" asp-action="DeleteProfile" method="post"  asp-route-id="@item.Id">
                    <input type="submit"  name="delete" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>


<page-link page-model="Model.PageViewModel" page-action="ViewPatients"
           page-url-sortorder="@(Model.SortProfilesViewModel.Current)"></page-link>

