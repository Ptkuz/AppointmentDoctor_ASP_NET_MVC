@using DoctorsAppointments.Models
@model IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Список докторов</h2>
<p><a asp-action="CreateDoctor">Добавить доктора</a></p>
<table class="table">
    <tr><th>Имя</th><th>Отчество</th><th>Фамилия</th><th>Дата рождения</th><th>Профиль</th><th>Опыт</th></tr>
    @foreach(var item in Model.Doctors)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.Patronymic</td>
            <td>@item.LastName</td>
            <td>@item.DateAge.ToShortDateString()</td>
            <td>@item.Profile.Name</td>
            <td>@item.Experience</td>
            <td>
                <a asp-action="EditDoctor" asp-controller="Data" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                 <form asp-controller="Data" asp-action="DeleteDoctor" method="post"  asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>

<p>
    @if (Model.PageViewModel.HasPreviousPage)
    {
        <a asp-action="ViewDoctors" asp-route-page="@(Model.PageViewModel.PageNumber - 1)" class="glyphicon glyphicon-chevron-left">
            Назад
        </a>        
    }
    @if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="ViewDoctors"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)" class="glyphicon glyphicon-chevron-right">
        Вперед
    </a>
}
</p>