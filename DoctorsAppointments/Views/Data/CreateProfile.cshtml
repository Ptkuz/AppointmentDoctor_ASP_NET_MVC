@using DoctorsAppointments.Models.DataBase
@model Profile
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Добавление нового профиля";


}


@using(Html.BeginForm())
{
    <fieldset>
        <legend>Профиль</legend>
        <p>
           <label asp-for="Name"></label><br/>
           <input type="text" asp-for="Name"/>
           <span asp-validation-for="Name"/>  
        </p>
        <p>
            <label asp-for="Description"></label><br/>
            @Html.TextAreaFor(model => model.Description)    
             <span asp-validation-for="Description"/>
        </p>
        <p>
            <input type="submit" name="butdata" value="Добавить профиль" />
        </p>

    </fieldset>

}

