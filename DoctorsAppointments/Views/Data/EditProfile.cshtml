@using DoctorsAppointments.Models.DataBase
@model Profile
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Редактирование профиля</h2>
<form asp-action="EditProfile" asp-controller="Data" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Name">Название профиля</label>
        <input type="text" asp-for="Name"/>
    </p>
    <p>
        <label asp-for="Description">Описание профиля</label>
        <input type="text" asp-for="Description"/>
    </p>
    <p>
        <input type="submit" value="Изменить" />
    </p>


</form>