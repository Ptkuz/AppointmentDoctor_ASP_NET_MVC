@using DoctorsAppointments.Models.DataBase
@model Profile
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




<h2>Редактирование профиля</h2>
<form asp-action="EditProfile" asp-controller="Data" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Name">Название профиля</label><br/>
        <input type="text" asp-for="Name"/>
        <span asp-validation-for="Name"/>
    </p>
    <p>
        <label asp-for="Description">Описание профиля</label><br/>
       @Html.TextAreaFor(model => model.Description)    
        <span asp-validation-for="Description"/>
    </p>
    <p>
        <input type="submit" name="butdata" value="Изменить" />
    </p>


</form>

