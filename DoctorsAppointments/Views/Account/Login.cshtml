@using DoctorsAppointments.Models.ViewModels.UserViewModel
@model LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Авторизация";


}

<div class="divlogin">
<a asp-action="Register" asp-controller="Account">Регистрация</a>

@using(Html.BeginForm())
{
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="model">
        <p>
           <label asp-for="Email"></label><br/>
           <input type="text" asp-for="Email"/>
           <span asp-validation-for="Email"/>
        </p>
        <p>
           <label asp-for="Password"></label><br/>
           <input type="password" asp-for="Password"/>
           <span asp-validation-for="Password"/>
        </p>
        <p>
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </p>
    </form>

}

</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>


